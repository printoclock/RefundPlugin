<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="Sylius\RefundPlugin\Entity\CreditMemo" table="sylius_refund_credit_memo">
        <id name="id" column="id" type="string" />

        <field name="token" />
        <field name="number" />
        <field name="orderNumber" />
        <field name="taxTotal" column="tax_total" type="integer" />
        <field name="total" type="integer" />
        <field name="units" type="json" />
        <field name="currencyCode" />
        <field name="localeCode" />
        <field name="comment" type="text" nullable="true" />
        <field name="issuedAt" column="issued_at" type="datetime" nullable="true" />
        <field name="billingData" type="text" />
        <field name="shopBillingData" type="text" />
        <field name="paymentMethod" type="text" />
        <field name="retainedFeeShipping" column="retained_fee_shipping" nullable="false" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="retainedFeePayment" column="retained_fee_payment" nullable="false" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="retainedFeePacking" column="retained_fee_packing" nullable="false" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>
        <field name="retainedFeeProduct" column="retained_fee_product" nullable="false" type="integer">
            <options>
                <option name="default">0</option>
            </options>
        </field>

        <embedded name="channel" class="Sylius\RefundPlugin\Entity\CreditMemoChannel" />

        <indexes>
            <index columns="orderNumber" />
        </indexes>
    </entity>
</doctrine-mapping>
